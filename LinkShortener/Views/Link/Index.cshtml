@model IEnumerable<LinkDto>
@{
    ViewData["Title"] = "Links Page";
}

<div class="text-center">
    <h1 class="display-4">Link Shortener</h1>

    <div class="row pt-4">
        <div class="col-6"></div>
        <div class="col-6 text-end">
            <a asp-controller="Link" asp-action="Create" class="btn btn-primary p-2" style="width: 200px">
                <i class="bi bi-plus-circle"></i>
                &nbsp; Add new link
            </a>
        </div>
    </div>
    <br />

    <table class="table" style="width:100%">
        <thead class="bg-dark">
            <tr>
                <th>Long URL</th>
                <th>Short URL</th>
                <th>Creation Date</th>
                <th>Clicks</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var link in Model)
            {
                <tr>
                    <td width="20%"><a href=@link.UrlLong>@link.UrlLong</a></td>
                    <td width="10%"><a href=@link.UrlShort>@link.UrlShort</a></td>
                    <td width="10%">@link.CreationDate</td>
                    <td width="8%">@link.NumberOfClicks</td>
                    <td width="10%">
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Link" asp-action="Edit" asp-route-id="@link.Id"
                               class="btn btn-info mx-1">
                                <i class="bi bi-pencil-square"></i>
                                &nbsp; Edit
                            </a>
                        </div>
                    </td>
                    <td width="10%">
                        <div class="btn-group w-75" role="group">
                            <form method="post" asp-controller="Link" asp-action="Delete" asp-route-id="@link.Id">
                                <button class="btn btn-danger mx-1" type="submit" style="width: 100px">
                                    <i class="bi bi-trash3"></i>
                                    &nbsp; Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
    </table>
</div>
